<% if flash.notice || flash.alert %>
    <div class="notice_block">
        <div class="wrap">
            <%= content_tag(:span, flash.notice, class: 'notice')  %>
            <%= form_tag('/users_name') do %>
            	<input type="text" name="name">
            	<%= submit_tag() %>
            <% end %>
        </div>
    </div>
<% end %>
	<div class="main">
		<!-- がんばれー笑 -->
		<div class="header">
			<div class="wrap">
				<h1><a href="/">Hoshino Takahiroの卒論</a></h1>
			</div>
		</div>
		<div class="main">
			<div class="wrap">
				<div class="left_main">
					<% @comments.each do |comment| %>

						<div class="comment">
							<p><%= comment.user_name %></p>
							<h3><%= comment.comment %></h3>
							<p><%= comment.created_at.strftime('%c') %></p>
						</div>

					<% end %>
				</div>
			</div>
		</div>
		<div class="footer">
			<div class="wrap">
				<%= form_for(@new_comment, url: :takahiro_post) do |f| %>
					<%= f.label :comment, 'コメント投稿', :class => 'mt-10' %>
                    <%= f.text_area :comment %>
                    <%= f.submit '投稿' %>
				<% end %>
			</div>
		</div>
		</div>
	</div>