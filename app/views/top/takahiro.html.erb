<% if flash.notice || flash.alert %>
    <div class="notice_block">
        <div class="wrap">
            <%= content_tag(:span, flash.notice, class: 'notice')  %>
            <%= form_tag('/users_name') do %>
            	<input type="text" name="name">
            	<%= submit_tag() %>
            <% end %>
        </div>
    </div>
<% end %>
	<div class="main">
		<!-- がんばれー笑 -->
		<div class="header">
			<div class="wrap">
				<h1><a href="/all"><%= @page.page_name ||= "Hoshino Takahiroの卒論" %></a></h1>
			</div>
		</div>
		<div class="main">
			<div class="wrap">
				<div class="left_main">
					<% @comments.each do |comment| %>

						<div class="comment <%= "own_comment" if comment.user_name == session[:user_name]  %>">
							<p><span class="user"><%= comment.user_name %></span><span class="settime"><%= comment.created_at.strftime('%H:%M:%S') %></span></p>
							<h3><%= comment.comment %></h3>
						
						</div>

					<% end %>
				</div>
			</div>
		</div>
		<div class="footer">
			<div class="wrap">
				<%= form_for(@new_comment, url: :takahiro_post) do |f| %>
					<%= f.label :comment, 'コメント投稿', :class => 'mt-10' %>
					<input type="hidden" name="page" id="page" value="<%= params[:page] %>" />
                    <%= f.text_area :comment %>
                    <%= f.submit '投稿' %>
				<% end %>
			</div>
		</div>
		</div>
	</div>
